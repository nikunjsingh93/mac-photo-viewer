<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>CFBundleIdentifier</key>          <string>com.glassphotoviewer.app</string>
  <key>CFBundleName</key>                <string>Glass Photos</string>
  <key>CFBundleDisplayName</key>         <string>Glass Photos</string>
  <key>CFBundleShortVersionString</key>  <string>1.0</string>
  <key>CFBundleVersion</key>             <string>1.0</string>
  <key>LSMinimumSystemVersion</key>      <string>13.0</string>
  <key>CFBundlePackageType</key>         <string>APPL</string>
  <key>CFBundleIconName</key>            <string>AppIcon</string>
  <key>NSHighResolutionCapable</key>     <true/>
  
  <!-- Security and distribution settings -->
  <key>LSApplicationCategoryType</key>   <string>public.app-category.graphics-design</string>
  <key>NSAppTransportSecurity</key>
  <dict>
    <key>NSAllowsArbitraryLoads</key>    <false/>
  </dict>
  
  <!-- File associations -->
  <key>CFBundleDocumentTypes</key>
  <array>
    <dict>
      <key>CFBundleTypeName</key>       <string>Images</string>
      <key>CFBundleTypeRole</key>       <string>Viewer</string>
      <key>LSHandlerRank</key>          <string>Owner</string>
      <key>LSItemContentTypes</key>
      <array>
        <string>public.image</string>
        <string>public.jpeg</string>
        <string>public.png</string>
        <string>public.heic</string>
        <string>public.heif</string>
        <string>public.tiff</string>
        <string>com.compuserve.gif</string>
        <string>public.camera-raw-image</string>
        <string>public.webp</string>
        <string>org.webmproject.webp</string>
        <string>public.bmp</string>
        <string>com.adobe.pdf</string>
      </array>
      <key>CFBundleTypeExtensions</key>
      <array>
        <string>jpg</string>
        <string>jpeg</string>
        <string>png</string>
        <string>heic</string>
        <string>heif</string>
        <string>tiff</string>
        <string>tif</string>
        <string>gif</string>
        <string>webp</string>
        <string>bmp</string>
        <string>dng</string>
        <string>nef</string>
        <string>cr2</string>
        <string>arw</string>
        <string>raf</string>
      </array>
    </dict>
  </array>
  
  <!-- URL schemes for file opening -->
  <key>CFBundleURLTypes</key>
  <array>
    <dict>
      <key>CFBundleURLName</key>         <string>com.glassphotoviewer.file</string>
      <key>CFBundleURLSchemes</key>
      <array>
        <string>glassphotos</string>
      </array>
    </dict>
  </array>
  
  <!-- App capabilities -->
  <key>NSAppleEventsUsageDescription</key>
  <string>Glass Photos needs to access files to display images.</string>
  
  <!-- Required background modes -->
  <key>UIBackgroundModes</key>
  <array>
    <string>background-processing</string>
  </array>
</dict>
</plist>
