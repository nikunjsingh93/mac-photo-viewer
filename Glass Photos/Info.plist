{
	CFBundleIdentifier = "com.glassphotos.app";
	CFBundleName = "Glass Photos";
	CFBundleDisplayName = "Glass Photos";
	CFBundleVersion = "1.0";
	CFBundleShortVersionString = "1.0";
	LSMinimumSystemVersion = "13.0";
	NSHighResolutionCapable = true;
	CFBundleIconName = "AppIcon";
	CFBundlePackageType = "APPL";
	
	<!-- Security and distribution settings -->
	LSApplicationCategoryType = "public.app-category.graphics-design";
	NSAppTransportSecurity = {
		NSAllowsArbitraryLoads = false;
	};
	
	CFBundleDocumentTypes = (
		{
			CFBundleTypeExtensions = (
				jpg,
				jpeg,
				png,
				webp,
				heic,
				heif,
				tiff,
				gif,
				bmp,
				dng,
				nef,
				cr2,
				arw,
				raf
			);
			CFBundleTypeName = "Image File";
			CFBundleTypeRole = "Viewer";
			LSHandlerRank = "Owner";
		}
	);
	UTExportedTypeDeclarations = (
		{
			UTTypeConformsTo = (
				"public.image"
			);
			UTTypeDescription = "Image File";
			UTTypeIdentifier = "com.glassphotoviewer.image";
			UTTypeTagSpecification = {
				"public.filename-extension" = (
					jpg,
					jpeg,
					png,
					webp,
					heic,
					heif,
					tiff,
					gif,
					bmp,
					dng,
					nef,
					cr2,
					arw,
					raf
				);
			};
		}
	);
	
	<!-- URL schemes for file opening -->
	CFBundleURLTypes = (
		{
			CFBundleURLName = "com.glassphotoviewer.file";
			CFBundleURLSchemes = (
				glassphotos
			);
		}
	);
	
	<!-- App capabilities -->
	NSAppleEventsUsageDescription = "Glass Photos needs to access files to display images.";
	
	<!-- Required background modes -->
	UIBackgroundModes = (
		background-processing
	);
}